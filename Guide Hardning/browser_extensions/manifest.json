{
  "manifest_version": 2,
  "name": "GUIDE HARDNING",
  "version": "1.0",
  "description": "An extension of guidance hardening to enhance the security of your computer system",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "http://*",
    "https://*",
    "activeTab",
    "http://127.0.0.1:5000/*",
    "http://127.0.0.1:5000/send-query"
  ]
}